<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.formprincipal.FormPrincipal">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_700"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name"
            app:navigationIcon="@drawable/ic_logo_white_24"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/imageaccount"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_baseline_person_24"
                app:layout_constraintBottom_toBottomOf="@id/toolbarapp"
                app:layout_constraintEnd_toEndOf="@id/toolbarapp"
                app:layout_constraintTop_toTopOf="@id/toolbarapp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bem_vindo"
        android:id="@+id/textodados"
        tools:text="Olá, Pedro!"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/green_700"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulohome"
        android:id="@+id/textodados2"
        android:layout_marginTop="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/green_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        android:padding="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagemPlanta"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_local_florist_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="81dp"
                android:layout_height="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:text="@string/reservatorio"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_reservatorio"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_reservatorio"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_reservatorio" />

            <ProgressBar
                android:id="@+id/progress_bar_umidade"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/progress_bar_reservatorio"
                app:layout_constraintStart_toEndOf="@+id/textViewNomePlanta"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.101"
                tools:progress="60" />

            <TextView
                android:id="@+id/text_view_progress_umidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_umidade"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_umidade"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_umidade"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_umidade"
                tools:text="60%" />

            <ProgressBar
                android:id="@+id/progress_bar_reservatorio"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.101"
                tools:progress="60" />

            <TextView
                android:id="@+id/text_view_progress_reservatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_reservatorio"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_reservatorio"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_reservatorio"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_reservatorio"
                tools:text="Cheio" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/umidade"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_umidade"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_umidade"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_umidade" />

            <TextView
                android:id="@+id/textViewNomePlanta"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/nome_planta"
                android:textColor="@color/green_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imagemPlanta"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Laurinha" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Peperômia"
                app:layout_constraintStart_toEndOf="@id/imagemPlanta"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomePlanta" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>