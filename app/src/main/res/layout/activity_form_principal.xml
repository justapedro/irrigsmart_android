<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.formprincipal.FormPrincipal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_deslogar"
        android:id="@+id/botao_deslogar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:textSize="20sp"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logado como Pedro"
        android:id="@+id/textodados"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umidade"
        android:id="@+id/textoumidade"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:textSize="20sp"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nível"
        android:id="@+id/textonivel"
        android:layout_marginTop="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:textSize="20sp"
        android:padding="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:padding="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservatório"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_reservatorio"
                app:layout_constraintStart_toEndOf="@+id/progress_bar_umidade"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_reservatorio" />

            <ProgressBar
                android:id="@+id/progress_bar_umidade"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginStart="112dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.505"
                tools:progress="60" />

            <TextView
                android:id="@+id/text_view_progress_umidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_umidade"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_umidade"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_umidade"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_umidade"
                tools:text="60%" />

            <ProgressBar
                android:id="@+id/progress_bar_reservatorio"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_marginEnd="88dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.505"
                tools:progress="60" />

            <TextView
                android:id="@+id/text_view_progress_reservatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_reservatorio"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_reservatorio"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_reservatorio"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_reservatorio"
                tools:text="Cheio" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umidade"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_umidade"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_umidade"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_umidade" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>